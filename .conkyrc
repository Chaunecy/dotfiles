-- ===================================================================
--                            conky_bar
-- ===================================================================

conky.config = {

    -- 不输出到X
    out_to_x = false,
    out_to_console = true,
    background = false,
    double_buffer = false,
    -- 刷新时间
    update_interval = 1,
    -- 运行时间，0为一直运行
    total_run_times = 0,
    -- 强制uft8编码，需xft支持
    override_utf8_locale = false,
    -- 缩写字符单位
    short_units = true,
    -- 监视端口
    if_up_strictness = 'address',
    -- cpu数据监测模式，一般选2
    cpu_avg_samples = 2

}

conky.text = [[
${if_up enp3s0}\
 ${upspeed enp3s0}/s  ${downspeed enp3s0}/s  ${addr enp3s0} \
${endif}\
${if_up wlp2s0}\
 ${upspeed wlp2s0}/s  ${downspeed wlp2s0}/s  ${addr wlp2s0} \
${endif}\
 ${loadavg 1} \
 ${mem} \
 ${fs_used /} \
${time %Y/%m/%d %A %H:%M}
]]
