!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.termName:             rxvt
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.tintCddolor:          #fdf6e3
URxvt.shading:              10
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            5000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
!URxvt*font:xft:Monospace:pixelsize=14
!URxvt*boldFont:xft:Monospace:pixelsize=14
!URxvt*font:xft:Monospace:pixelsize=14:antialias=true:Bold,xft:Monospace:pixelsize=14:
!URxvt*boldFont:Monospcae:pixelsize=14:antialias=true:Bold,xft:Monospace:pixelsize=14:
URxvt.font:xft:Menlo:bold:pixelsize=12:antialias=true,xft:SimSun:bold:pixelsize=14:antialias=true
URxvt.boldFont:xft:Menlo:bold:pixelsize=12:antialias=true,xft:SimSun:bold:pixelsize=14:antialias=true

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome-stable

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true
